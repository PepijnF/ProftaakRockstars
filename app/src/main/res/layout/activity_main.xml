<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#242424">
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonLogin"

            app:backgroundTint="#FFE000" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button"
            android:textColor="#242424" app:cornerRadius="20dp"/>
    <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"

            app:layout_constraintStart_toStartOf="@+id/editText"
            android:textColor="#FFFFFF" android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/buttonLogin"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:id="@+id/editText" android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:shadowColor="#FFFFFF"/>
    <CheckBox
            android:text="Remember Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBoxRememberName"
            app:layout_constraintStart_toStartOf="@+id/editText" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>