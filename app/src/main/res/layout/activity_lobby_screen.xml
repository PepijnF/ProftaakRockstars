<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LobbyScreen" android:background="#242424">

    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="#FFE000" android:textColor="#242424" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="68dp"/>
    <androidx.recyclerview.widget.RecyclerView

            android:layout_width="322dp"
            android:layout_height="423dp"
            android:id="@+id/playerList"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:background="#FFE000"/>
    <TextView
            android:text="Lobby Code: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lobbyCodeText"
            android:textColor="#FFFFFF" android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="25dp" android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toTopOf="@+id/playerList" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewLobbyCode"
            android:textColor="#FFFFFF" android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/lobbyCodeText"
            app:layout_constraintBottom_toBottomOf="@+id/lobbyCodeText"/>
</androidx.constraintlayout.widget.ConstraintLayout>