<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeScreen" android:background="#242424">

    <TextView
            android:text="Quiz App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textQuizApp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textScaleX="1" android:textSize="50dp"
            android:layout_marginTop="100dp" android:textColor="#FFFFFF"/>

    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:hint="Lobby Code"
              android:id="@+id/inputLobbyCode" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Lobby"
            app:layout_constraintTop_toBottomOf="@+id/inputLobbyCode"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/buttonJoinLobby" app:backgroundTint="#FFE000" android:textColor="#242424"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Host Lobby"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toBottomOf="@+id/buttonJoinLobby"
            app:backgroundTint="#FFE000" android:textColor="#242424" android:id="@+id/buttonHostLobby"/>
</androidx.constraintlayout.widget.ConstraintLayout>