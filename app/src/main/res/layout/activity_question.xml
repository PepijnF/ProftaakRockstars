<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#242424"
        tools:context=".Question">
    <Space
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.40"
            android:id="@+id/space"/>
    <Space
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/space2"/>
    <Space
            android:layout_width="10dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/Space3"/>
    <Button
            android:text="A"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/buttonAnswerA"
            android:backgroundTint="#FFE000"
            android:textColor="#242424"
            app:layout_constraintEnd_toStartOf="@+id/Space3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/space2" app:layout_constraintTop_toBottomOf="@+id/space"
            app:cornerRadius="20dp"/>
    <Button
            android:text="B"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/buttonAnswerB"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:layout_constraintBottom_toTopOf="@+id/space2" app:layout_constraintStart_toEndOf="@+id/Space3"
            android:backgroundTint="#FFE000"
            android:textColor="#242424"
            app:layout_constraintEnd_toEndOf="parent" app:cornerRadius="20dp"/>
    <Button
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/buttonAnswerC"
            android:backgroundTint="#FFE000"
            android:textColor="#242424"
            app:layout_constraintEnd_toStartOf="@+id/Space3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/buttonAnswerA"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            app:cornerRadius="20dp"/>
    <Button
            android:text="D"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/buttonAnswerD"
            android:backgroundTint="#FFE000"
            android:textColor="#242424"
            app:layout_constraintTop_toBottomOf="@+id/space2"
            app:layout_constraintBottom_toBottomOf="@+id/Space3" app:layout_constraintStart_toEndOf="@+id/Space3"
            app:layout_constraintEnd_toEndOf="parent" app:cornerRadius="20dp"/>
    <TextView
            android:text="Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewQuistion"
            app:layout_constraintBottom_toTopOf="@+id/space"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#FFFFFF" android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>